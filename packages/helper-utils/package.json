{
  "name": "@cropper/helper-utils",
  "description": "A series of common utility functions.",
  "version": "2.0.0-beta",
  "main": "dist/helper-utils.js",
  "module": "dist/helper-utils.esm.js",
  "types": "dist/helper-utils.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "api-extractor": "api-extractor run --local --verbose",
    "build": "npm run tsc && npm run api-extractor && npm run rollup",
    "clean": "del-cli dist temp",
    "release": "npm run clean && npm run build",
    "rollup": "rollup -c ../../rollup.config.js",
    "tsc": "tsc --outDir ./temp --declaration --emitDeclarationOnly"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fengyuanchen/cropperjs.git",
    "directory": "packages/helper-utils"
  },
  "keywords": [
    "utils",
    "cropper",
    "cropper.js"
  ],
  "author": "Chen Fengyuan (https://chenfengyuan.com/)",
  "license": "MIT",
  "bugs": "https://github.com/fengyuanchen/cropperjs/issues",
  "homepage": "https://github.com/fengyuanchen/cropperjs/tree/next/packages/helper-utils/#readme",
  "dependencies": {
    "@cropper/helper-constants": "^2.0.0-beta"
  },
  "publishConfig": {
    "access": "public"
  }
}
