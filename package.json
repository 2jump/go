{
  "name": "cropperjs",
  "version": "2.0.0-beta",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run bootstrap && vuepress build docs",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint **/*.{css,scss,html,vue} --fix",
    "lint:js": "eslint . docs/.vuepress --fix",
    "prepare": "husky install",
    "release": "npm run bootstrap && lerna run release && npm run lint && npm test && npm run build && npm run changelog",
    "start": "npm run bootstrap && vuepress dev docs",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@microsoft/api-extractor": "^7.18.19",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/estree": "^0.0.50",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vuepress/plugin-pwa": "^2.0.0-beta.27",
    "@vuepress/plugin-pwa-popup": "^2.0.0-beta.27",
    "@vuepress/plugin-register-components": "^2.0.0-beta.27",
    "@vuepress/plugin-search": "^2.0.0-beta.27",
    "change-case": "^4.1.2",
    "conventional-changelog-cli": "^2.1.1",
    "create-banner": "^2.0.0",
    "cssnano": "^5.0.11",
    "del-cli": "^4.0.1",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.0.3",
    "eslint-plugin-vue": "^8.1.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.0.3",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "postcss-html": "^1.2.0",
    "rollup": "^2.60.0",
    "rollup-plugin-inline-postcss": "^3.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended-scss": "^5.0.1",
    "stylelint-config-recommended-vue": "^1.0.0",
    "stylelint-order": "^5.0.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "vuepress": "^2.0.0-beta.27"
  }
}
