{
  "name": "cropperjs",
  "version": "2.0.0-beta",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run bootstrap && vuepress build docs",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint **/*.{css,scss,html,md} --fix",
    "lint:js": "eslint . docs/.vuepress --fix",
    "prepare": "husky install",
    "release": "npm run bootstrap && lerna run release && npm run lint && npm test && npm run build && npm run changelog",
    "start": "npm run bootstrap && vuepress dev docs",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@microsoft/api-extractor": "^7.17.1",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/estree": "^0.0.49",
    "@types/node": "^14.17.4",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "@vuepress/plugin-pwa": "^2.0.0-beta.18",
    "@vuepress/plugin-pwa-popup": "^2.0.0-beta.18",
    "@vuepress/plugin-register-components": "^2.0.0-beta.18",
    "@vuepress/plugin-search": "^2.0.0-beta.18",
    "change-case": "^4.1.2",
    "conventional-changelog-cli": "^2.1.1",
    "create-banner": "^2.0.0",
    "cssnano": "^5.0.6",
    "del-cli": "^4.0.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.4.1",
    "eslint-plugin-vue": "^7.12.1",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "rollup": "^2.52.7",
    "rollup-plugin-inline-postcss": "^3.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5",
    "vuepress": "^2.0.0-beta.18"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not ie < 11",
    "not dead"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{css,scss,html,md}": "stylelint --fix"
  }
}
