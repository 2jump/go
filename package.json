{
  "name": "cropperjs",
  "version": "2.0.0-beta",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run bootstrap && npm run build:docs",
    "build:docs": "vuepress build docs",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint **/*.{css,styl,html,md} --fix",
    "lint:js": "eslint . --ext .js,.ts --fix",
    "release": "lerna run release && npm run lint && npm test && npm run build && npm run changelog",
    "serve": "vuepress dev docs",
    "start": "npm run bootstrap && npm run serve",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@microsoft/api-extractor": "^7.14.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vuepress/plugin-back-to-top": "^1.8.2",
    "change-case": "^4.1.2",
    "conventional-changelog-cli": "^2.1.1",
    "create-banner": "^2.0.0",
    "cssnano": "^5.0.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "rollup": "^2.45.2",
    "rollup-plugin-inline-postcss": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.13.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^26.5.5",
    "ts-loader": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "vuepress": "^1.8.2"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not ie < 11",
    "not dead"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{css,styl,html,md}": "stylelint --fix"
  }
}
