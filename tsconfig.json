{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "paths": {
      "@cropper/*": ["packages/*/src"],
      "cropperjs": ["packages/cropperjs/src"]
    },
    "types": [
      "@vuepress/client/types",
      "jest"
    ]
  },
  "include": [
    "*.js",
    ".*.js",
    "docs/.vuepress/**/*",
    "packages/*/src/*",
    "packages/*/tests/*",
    "types/*"
  ]
}
